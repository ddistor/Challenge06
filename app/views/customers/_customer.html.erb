<div class="column is-one-fifth">
  <div class="card">
    <div class="card-block">
      <h3 class="title is-3">
        <%= customer.full_name %>
      </h3>
      <% if customer.image.present? %>
        <div class="card-image">
          <figure class="image is-1by1">
            <%= image_tag customer.image %>
          </figure>
        </div>
      <% end %>
    </div>
    <footer class="card-content">
      <p>
        <%= customer.phone_number %>
      </p>
      <p>
        <%= !customer.email_address.empty? ? customer.email_address : "missing" %>
      </p>
      <p>
        <%= customer.notes %>
      </p>
    </footer>
  </div>
</div>